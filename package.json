{
  "name": "jw-color-picker",
  "version": "0.1.0",
  "description": "A react component for basic color selection.",
  "author": "john wong <johnwongwwc@gmail.com>",
  "homepage": "https://waichungwong.github.io/jw-color-picker/build",
  "keywords": [
    "color",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/WaiChungWong/jw-color-picker.git"
  },
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.6",
    "color-functions": "^1.2.0",
    "debounce": "^1.1.0",
    "jw-keyboard": "^0.1.2",
    "jw-mouse": "^0.1.2",
    "prop-types": "^15.6.2",
    "supports-passive": "0.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^5.3.0",
    "eslint-plugin-react": "^7.10.0",
    "install": "^0.12.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-scripts": "^1.1.4"
  },
  "main": "./lib/index.js",
  "scripts": {
    "build-css": "node-sass src/ -o src/",
    "watch-css": "npm run build-css && node-sass src/ -o src/ --watch",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "babel src/module -d lib --copy-files --ignore '**/*.scss'",
    "build-demo": "npm run build-css && react-scripts build"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "semi": 2,
      "no-empty": 0
    }
  }
}
